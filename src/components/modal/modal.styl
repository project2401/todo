.login
	position absolute
	display flex
	justify-content center
	align-items center
	left 0
	top 0
	width 100vw
	height 100vh
	background-color rgba(0, 0, 0, .5)
	transition .3s
	opacity 1
	visibility visible
	z-index: 1
	.wrapper
		width 300px
		position relative
		margin 0 auto
		display flex
		flex-direction column
		padding 10px
		border-radius 8px
		background-color white